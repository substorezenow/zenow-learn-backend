{
  "name": "zenow-learn-backend",
  "version": "1.0.0",
  "description": "Node.js backend with ScyllaDB and CockroachDB integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "migrate": "ts-node -e \"require('./dist/utils/migrationManager').runMigrations()\"",
    "migrate:dev": "ts-node-dev --respawn --transpile-only -e \"require('./src/utils/migrationManager').runMigrations()\"",
    "migrate:status": "ts-node -e \"require('./dist/utils/migrationManager').showMigrationStatus()\"",
    "migrate:rollback": "ts-node -e \"require('./dist/utils/migrationManager').rollbackMigration()\"",
    "migrate:create": "ts-node -e \"const {migrationManager} = require('./dist/utils/migrationManager'); migrationManager.createMigration(process.argv[2] || 'new-migration')\"",
    "create-admin": "ts-node src/utils/createAdminUser.ts",
    "check-users": "ts-node src/utils/checkUsers.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "redis": "^4.6.12",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "swagger-ui-express": "^5.0.0",
    "openapi-types": "^12.1.3",
    "stripe": "^14.9.0",
    "@paypal/checkout-server-sdk": "^1.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.17",
    "@types/pg": "^8.11.6",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/migrations/**",
      "!src/utils/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "testTimeout": 30000
  }
}